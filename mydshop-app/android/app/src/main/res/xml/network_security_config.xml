<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir HTTP cleartext globalmente para desenvolvimento -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Permitir HTTP para desenvolvimento local -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.15.10</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Produção usa HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">mydshop.com.br</domain>
        <domain includeSubdomains="true">mfrural.shop</domain>
    </domain-config>
</network-security-config>
