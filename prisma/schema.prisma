// Cupons de Desconto
model Coupon {
  id                String       @id @default(cuid())
  code              String       @unique // Código do cupom (ex: PRIMEIRACOMPRA)
  description       String?      // Descrição interna
  discountType      DiscountType @default(PERCENTAGE) // PERCENTAGE ou FIXED
  discountValue     Float        // Valor do desconto (% ou R$)
  minOrderValue     Float?       // Valor mínimo do pedido para usar
  maxDiscountValue  Float?       // Valor máximo de desconto (para %)
  maxUses           Int?         // Limite total de usos (null = ilimitado)
  maxUsesPerUser    Int?         @default(1) // Limite por usuário
  usageCount        Int          @default(0) // Contador de usos
  validFrom         DateTime     @default(now()) // Data início da validade
  validUntil        DateTime?    // Data fim da validade (null = sem fim)
  isActive          Boolean      @default(true)
  // Restrições
  allowedStates     String?      @db.Text // Estados permitidos (JSON array: ["MA", "SP"])
  allowedCategories String?      @db.Text // Categorias permitidas (JSON array de IDs)
  excludedProducts  String?      @db.Text // Produtos excluídos (JSON array de IDs)
  firstPurchaseOnly Boolean      @default(false) // Apenas primeira compra
  // Auditoria
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  createdBy         String?      // ID do admin que criou
  
  usages            CouponUsage[]

  @@index([code])
  @@index([isActive])
  @@index([validFrom, validUntil])
  @@map("coupon")
}

// Registro de uso de cupons
model CouponUsage {
  id        String   @id @default(cuid())
  couponId  String
  orderId   String
  userId    String?
  discount  Float    // Valor do desconto aplicado
  createdAt DateTime @default(now())

  coupon    Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)

  @@index([couponId])
  @@index([userId])
  @@index([orderId])
  @@map("coupon_usage")
}

enum DiscountType {
  PERCENTAGE
  FIXED
}
